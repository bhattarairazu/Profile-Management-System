<head>
    <p style="text-align: center; color: #1589FF; font-size: 1.5em">
        User Portal
    </p>
</head>
<body style="text-align: center; color: #1589FF; font-size: 1.2em">
    <p style="text-align: center; color: #FF8050; font-size: 1.2em">
    Sign In
    </p>
    <%= form_with scope: :user, local: true do |form| %>
        <p>
          <%= form.label :email %><br>
          <%= form.text_field :email %>
        </p>
       
        <p>
          <%= form.label :password %><br>
          <%= form.text_area :password %>
        </p>
       
        <p>
          <%= form.submit :"Sign In" %>
        </p>
      <% end %>

    <%= form_with scope: :user, local: true do |form| %>
        <p>
          <%= link_to 'Create New User Account', startup_signup_path(@users) %>
        </p>
      <% end %>
</body>