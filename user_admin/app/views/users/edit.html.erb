<head>
    <p style="text-align: center; color: #1589FF; font-size: 1.5em">
        User Portal
    </p>
</head>
<body style="text-align: center; color: #1589FF; font-size: 1.2em">
    <p style="text-align: center; color: #FF8050; font-size: 1.2em">
    Edit User
    </p>
  <%= form_with(model: @user, local: true) do |form| %>
 
      <% if @user.errors.any? %>
        <div id="error_explanation">
          <h3>
            <%= pluralize(@user.errors.count, "error") %> prohibited
            <br>Information is too short.
          </h3>
          <ol>
            <% @user.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ol>
        </div>
      <% end %>

 
      <%= form.label(:name, "Name: ") %>
    <%= form.text_field(:name) %> <br><br>
    <%= form.label(:email, "Email: ") %>
    <%= form.text_field(:email) %> <br><br>
    <%= form.label(:phone, "Phone: ") %>
    <%= form.text_field(:phone) %> <br><br>
    <%= form.label(:password, "Password: ") %>
    <%= form.password_field(:password) %> <br><br>
    <%= form.label(:parent, "Parent: ") %>
    <%= form.text_field(:parent) %> <br><br>
    <%= form.submit("Update") %>
 
  <% end %>

  <br><br>
  <%= link_to 'Home', users_path %>
</body>